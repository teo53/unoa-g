# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Server-only (NEVER expose to client)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# App URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_FLUTTER_APP_SCHEME=com.unoa.app

# Optional: Explicit demo mode (never auto-enabled)
NEXT_PUBLIC_DEMO_MODE=false
NEXT_PUBLIC_DEMO_ADMIN_PASSWORD=change-me

# Optional: Payment (TossPayments / PortOne)
PORTONE_API_KEY=your-portone-api-key
PORTONE_API_SECRET=your-portone-api-secret

# Optional: Revalidation
REVALIDATE_SECRET=your-revalidate-secret
