{
  "permissions": {
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Read(.claude/settings.local.json)",
      "Read(.mcp.json)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -NoProfile -File \"$CLAUDE_PROJECT_DIR/scripts/hooks/pretool-gate.ps1\""
          }
        ]
      }
    ]
  }
}
