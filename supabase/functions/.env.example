SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key

# -- Environment --
# Values: "production" | "staging" | "development"
ENVIRONMENT=development

# -- TossPayments (DT purchases) --
TOSSPAYMENTS_SECRET_KEY=test_sk_xxxxxxxxxxxxxxx
# Webhook HMAC secret (only used for payout/seller events)
TOSSPAYMENTS_WEBHOOK_SECRET=

# -- PortOne V2 (Funding KRW payments) --
PORTONE_API_SECRET=
PORTONE_WEBHOOK_SECRET=

# -- AI (ai-reply-suggest, ai-poll-suggest) --
ANTHROPIC_API_KEY=

# -- Cron (scheduled-dispatcher, refresh-fallback-quotas) --
# Must match the value stored in Vault via:
#   SELECT vault.create_secret('<value>', 'cron_secret');
CRON_SECRET=

# -- App URL (payment-checkout success/fail redirects) --
APP_BASE_URL=https://unoa-app-demo.web.app

# -- Identity Verification (verify-identity) --
PII_ENCRYPTION_KEY=

# -- Sentry Error Tracking --
SENTRY_DSN=
